<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/deal_cardview"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:background="@color/colorPrimary"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="95dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/history_date_textview"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.2"
                android:gravity="center"
                android:textAppearance="@style/TextAppearance.FontPath"
                android:textColor="@color/colorPrimaryDark"
                />

            <TextView
                android:id="@+id/history_description_textview"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:gravity="center"
                android:background="@drawable/background_left_line"
                android:textAppearance="@style/TextAppearance.FontPath"
                android:textColor="@color/colorPrimaryDark"
                />

            <TextView
                android:id="@+id/history_price_textview"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.9"
                android:gravity="center"
                android:background="@drawable/background_left_line"
                android:textAppearance="@style/TextAppearance.FontPath"
                android:textColor="@color/colorPrimaryDark"
                />

            <TextView
                android:id="@+id/history_bonus_textview"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.9"
                android:gravity="center"
                android:background="@drawable/background_left_line"
                android:textAppearance="@style/TextAppearance.FontPath"
                android:textColor="@color/colorAccent"
                />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>