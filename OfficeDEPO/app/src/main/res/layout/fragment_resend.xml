<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView android:textAppearance="@style/TextAppearance.FontPath"
              android:id="@+id/register_resend_instructions_textview"
              android:visibility="gone"
              android:textColor="@color/colorPrimary"
              android:padding="5dp"
              android:layout_above="@+id/register_resend_button"
              android:text="@string/register_resend_instruction"
              android:layout_marginLeft="40dp"
              android:layout_marginRight="40dp"
              android:layout_marginTop="5dp"
              android:layout_marginBottom="5dp"
              android:textSize="14sp"
              android:textAlignment="center"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/register_resend_button"
        android:visibility="gone"
        android:textAppearance="@style/TextAppearance.FontPath"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:layout_marginRight="@dimen/activity_vertical_margin"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@android:color/transparent"
        android:textColor="@color/button_purple_text_color_selector"
        android:text="@string/register_resend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>